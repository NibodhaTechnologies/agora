<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <beans:bean id="broker" class="org.apache.activemq.xbean.BrokerFactoryBean">
        <beans:property name="config" value="classpath:META-INF/spring/activemq-configuration-context.xml"/>
        <beans:property name="start" value="true"/>
    </beans:bean>
    <beans:bean id="activemq"
                class="org.apache.activemq.camel.component.ActiveMQComponent">
        <beans:property name="connectionFactory" ref="pooledConnectionFactory"/>
        <beans:property name="transacted" value="true"/>
        <beans:property name="transactionManager" ref="jmsTransactionManager"/>
    </beans:bean>
    <beans:bean id="jmsTransactionManager" class="org.springframework.jms.connection.JmsTransactionManager">
        <beans:property name="connectionFactory" ref="pooledConnectionFactory"/>
    </beans:bean>
    <beans:bean id="pooledConnectionFactory" class="org.apache.activemq.pool.PooledConnectionFactory">
        <beans:property name="maxConnections" value="10"/>
        <beans:property name="maximumActiveSessionPerConnection" value="5"/>
        <beans:property name="connectionFactory" ref="connectionFactory"/>
        <beans:property name="createConnectionOnStartup" value="true"/>
    </beans:bean>
    <beans:bean id="redeliveryPolicy" class="org.apache.activemq.RedeliveryPolicy">
        <beans:property name="initialRedeliveryDelay" value="0"/>
        <beans:property name="maximumRedeliveries" value="-1"/>
    </beans:bean>
    <beans:bean id="connectionFactory" class="org.apache.activemq.ActiveMQConnectionFactory">
        <beans:property name="brokerURL"
                        value="activemq://activemqbroker:61616?broker.persistent=true&amp;broker.useJmx=false"/>
        <beans:property name="redeliveryPolicy" ref="redeliveryPolicy"/>
        <beans:property name="transactedIndividualAck" value="true"/>
    </beans:bean>

</beans:beans>