<mapping-configuration xmlns="http://agora.nibodha.com/schema/transformation"
                       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                       xsi:schemaLocation="http://agora.nibodha.com/schema/transformation http://agora.nibodha.com/schema/transformation/agora-transformation-config.xsd">
    <mapping mapping-id="xls-to-pojo">
        <sheet>0</sheet>
        <header-row>0</header-row>
        <data-start-row>1</data-start-row>
        <source>xls://stream:customer.xls</source>
        <destination>com.nibodha.agora.services.objectmapper.Customer</destination>
        <field>
            <source>Date</source>
            <destination>date</destination>
        </field>
        <field>
            <source>Price</source>
            <destination>price</destination>
        </field>
        <field>
            <source>Quantity</source>
            <destination>quantity</destination>
        </field>
        <field>
            <source>Total</source>
            <destination>total</destination>
        </field>
        <field>
            <source>Name</source>
            <destination>name</destination>
        </field>
        <field>
            <source>ID</source>
            <destination>id</destination>
        </field>
    </mapping>
    <mapping mapping-id="xls-to-map">
        <sheet>0</sheet>
        <header-row>0</header-row>
        <data-start-row>1</data-start-row>
        <source>xls://stream:customer.xls</source>
    </mapping>
</mapping-configuration>