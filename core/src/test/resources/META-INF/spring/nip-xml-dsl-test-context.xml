<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://camel.apache.org/schema/spring"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">


    <beans:import resource="nip-test-context.xml"/>

    <routeContext id="com.nibodha.ip.test.context">
        <route id="com.nibodha.ip.test.context.route">
            <from uri="direct://test1"/>
            <to uri="direct://mock:result1"/>
        </route>
        <!-- Null route id -->
        <route>
            <from uri="direct://test2"/>
            <to uri="direct://mock:result2"/>
        </route>
        <!-- Route id doesn't match pattern -->
        <route id="test">
            <from uri="direct://test3"/>
            <to uri="direct://mock:result3"/>
        </route>
        <!-- Duplicate route id-->
        <route id="com.nibodha.ip.test.context.route">
            <from uri="direct://test4"/>
            <to uri="direct://mock:result4"/>
        </route>
    </routeContext>
</beans:beans>