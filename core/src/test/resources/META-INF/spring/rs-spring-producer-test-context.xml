<beans:beans xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:cxf="http://camel.apache.org/schema/cxf"
             xmlns="http://camel.apache.org/schema/spring"
             xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/cxf http://camel.apache.org/schema/cxf/camel-cxf.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <beans:bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"/>
    <cxf:rsServer id="rsServer" address="http://localhost:${AvailablePortsCache.port1}/rsTest"
                  serviceClass="com.nibodha.ip.services.re.components.rs.test.TestService"
                  loggingFeatureEnabled="true" loggingSizeLimit="200">

    </cxf:rsServer>

    <camelContext id="com.nibodha.ip.test.rs.spring">
        <route>
            <from uri="rs://bean:rsServer"/>
            <to uri="log:body?level=INFO"/>
            <setBody>
                <constant>100</constant>
            </setBody>
        </route>
    </camelContext>
</beans:beans>
